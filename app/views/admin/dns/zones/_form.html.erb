<%= form_for [:admin, zone], html: { class: 'form-horizontal' } do |f| %>
    <div class="row">
        <div class="col-md-8">
            <div id="domain-statuses">
                <%= render 'shared/full_errors', object: f.object %>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :origin %>
                    </div>
                    <div class="col-md-8">
                        <% if f.object.new_record? %>
                            <%= f.text_field :origin, class: 'form-control', required: true %>
                        <% else %>
                            <%= f.text_field :origin, class: 'form-control', disabled: true %>
                        <% end %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :ttl %>
                    </div>
                    <div class="col-md-8">
                        <%= f.number_field :ttl, class: 'form-control', required: true %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :refresh %>
                    </div>
                    <div class="col-md-8">
                        <%= f.number_field :refresh, class: 'form-control', required: true %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :retry %>
                    </div>
                    <div class="col-md-8">
                        <%= f.number_field :retry, class: 'form-control', required: true %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :expire %>
                    </div>
                    <div class="col-md-8">
                        <%= f.number_field :expire, class: 'form-control', required: true %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :minimum_ttl %>
                    </div>
                    <div class="col-md-8">
                        <%= f.number_field :minimum_ttl, class: 'form-control', required: true %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :email %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :email, class: 'form-control', required: true %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :master_nameserver %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :master_nameserver, class: 'form-control', required: true %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :ns_records %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_area :ns_records, class: 'form-control', rows: 8 %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :a_records %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_area :a_records, class: 'form-control', rows: 8 %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :a4_records %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_area :a4_records, class: 'form-control', rows: 8 %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4 control-label">
                        <%= f.label :accounting_product_code %>
                    </div>
                    <div class="col-md-8">
                        <%= f.text_field :accounting_product_code, class: 'form-control', required: true %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-8 text-right">
            <button class="btn btn-success">
                <%= t(".#{zone.new_record? ? 'create' : 'update'}_btn") %>
            </button>
        </div>
    </div>
<% end %>
