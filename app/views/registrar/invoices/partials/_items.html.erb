<h4><%= t(:items) %></h4>

<hr/>

<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th class="col-xs-4"><%= t(:description) %></th>
                <th class="col-xs-2"><%= t(:unit) %></th>
                <th class="col-xs-2"><%= InvoiceItem.human_attribute_name :quantity %></th>
                <th class="col-xs-2"><%= t(:price) %></th>
                <th class="col-xs-2"><%= t(:total) %></th>
            </tr>
        </thead>

        <tbody>
            <% @invoice.items.each do |invoice_item| %>
                <tr>
                    <td><%= invoice_item.description %></td>
                    <td><%= invoice_item.unit %></td>
                    <td><%= invoice_item.quantity %></td>
                    <td><%= number_to_currency invoice_item.price %></td>
                    <td><%= number_to_currency invoice_item.amount %></td>
                </tr>
            <% end %>
        </tbody>

        <tfoot>
            <tr>
                <th colspan="3"></th>
                <th><%= t(:total_without_vat) %></th>
                <td><%= number_to_currency @invoice.subtotal %></td>
            </tr>
            <tr>
                <th class="no-border" colspan="3"></th>
                <th><%= t('vat', rate: (@invoice.vat_rate * 100).round) %></th>
                <td><%= number_to_currency @invoice.vat %></td>
            </tr>
            <tr>
                <th class="no-border" colspan="3"></th>
                <th><%= t(:total) %></th>
                <td><%= number_to_currency @invoice.sum %></td>
            </tr>
        </tfoot>
    </table>
</div>
